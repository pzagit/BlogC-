@model IEnumerable<BlogRough.Models.Post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />
<div class="container-fluid scaleContainer">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @foreach (var item in Model)
        {
            <div class="well">
                <span class="title"><strong >@item.Title</strong></span>
                <div class="picture">
                    <img src="@Url.Content(item.ImageFile)" class="img-responsive picture" />
                </div>
                <div class="description well">
                    <span class="body">@item.Body</span>
                </div>
                <div class="date">
                    <span class="time">@item.Date.ToString("t")</span> -
                    <span class="fulldate">@item.Date.ToString("dd MMM yyyy")</span>
                </div>
            </div>
        }
    </div>
</div>